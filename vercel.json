{
  "builds": [
    { "src": "api/chat.ts", "use": "@vercel/node" },
    { "src": "dist/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "/api/chat.ts" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}
